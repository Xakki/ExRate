{
    "name": "xakki/exrate",
    "version": "0.1",
    "type": "project",
    "description": "Exchange Rate Service",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-simplexml": "*",
        "ext-redis": "*",
        "ext-bcmath": "*",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^4",
        "doctrine/orm": "^3.6",
        "nelmio/api-doc-bundle": "^5.9",
        "symfony/asset": "8.*",
        "symfony/console": "8.*",
        "symfony/dotenv": "8.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "8.*",
        "symfony/http-client": "8.*",
        "symfony/intl": "8.*",
        "symfony/lock": "8.*",
        "symfony/messenger": "8.*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/property-access": "8.*",
        "symfony/property-info": "8.*",
        "symfony/rate-limiter": "8.*",
        "symfony/redis-messenger": "8.*",
        "symfony/runtime": "8.*",
        "symfony/scheduler": "8.*",
        "symfony/serializer": "8.*",
        "symfony/twig-bundle": "8.*",
        "symfony/validator": "8.*",
        "symfony/yaml": "8.*"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^12.5",
        "symfony/browser-kit": "8.*",
        "symfony/css-selector": "8.*",
        "symfony/maker-bundle": "^1.65"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "deploy": [
            "Composer\\Config::disableProcessTimeout",
            "composer i --prefer-dist",
            "composer dump-autoload",
            "composer migrate"
        ],
        "migrate": "bin/console doctrine:migrations:migrate --no-interaction",
        "test:phpstan": "APP_ENV=testing XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit 1G -v",
        "test:phpstan-basefile": "APP_ENV=testing XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit 1G -v --generate-baseline=phpstan-baseline.neon",
        "test:phpstan-clean": "XDEBUG_MODE=off vendor/bin/phpstan clear-result-cache",
        "test:cs-check": "XDEBUG_MODE=off vendor/bin/php-cs-fixer check",
        "test:cs-fix": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix",
        "test:unit": "XDEBUG_MODE=off bin/phpunit --log-junit report.xml"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "8.*"
        }
    }
}
